<% printed = false %>
<% if !((@authors ==[]) || (@authors == nil)) %>
  <h2>Authors</h2>
  <% @authors.each do |author| %>
    <p>
      <%= link_to(author.name, author) %>
    </p>
    <% printed = true %>
  <% end %>
<% end %>

<% if !((@books ==[]) || (@books ==nil)) %>
  <h2>Books</h2>
  <% @books.each do |book| %>
    <%= link_to(book.title, book) %>
    <%= image_tag(book.image) %>
    <% printed = true %>
  <% end %>
<% end %>

<% if printed == false %>
  <h2>No results found</h2>
<% end %>