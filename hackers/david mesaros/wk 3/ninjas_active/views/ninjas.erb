

<% @ninjas.each do |ninja| %>
 <div class="each_ninja">
 	<h3><a href="/ninjas <%= ninja.id %>"></a></h3>
 	<h2> Ninja Title: <% ninja.title %></h2>
 	<h2> Ninja description: <% ninja.description %></h2>
 	<h2> Ninja address: <% ninja.adress %></h2>

 	<iframe
	  width="600"
	  height="450"
	  frameborder="0" style="border:0"
	  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDRZL71ExmhZk-Ecf8KkQLs2kjc5jBHJqw=<%= ninja.address %>">
	</iframe>

<% end %>
	