<h2>Edit <%= @youtube.title %></h2>

<form action="/youtube/<%= @youtube.id %>" method="post">
  <label for="title">Title: </label>
  <input type="text" id="title" name="title" value="<%= @youtube.title %>">

  <label for="description">Description: </label>
  <input type="text" id="description" name="description" value="<%= @youtube.description %>">

  <label for="url">URL: </label>
  <input type="text" id="url" name="url" value="<%= @youtube.url %>">

  <label for="genre">Genre: </label>
  <select name="genre" id="genre">
    <% @genre_sorted.each do |genre| %>
    <option <%= "selected" if genre == @youtube.genre %>><%= genre %></option>
    <% end %>
  </select>

  <button type="submit">Submit</button>
</form>