<div class="vidform">
<form action="/videos/<%= @video['id'] %>" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @video['title'] %>">
  <label for="description">Description:</label>
  <textarea name="description" id="description" name="desciption">
  <%= @video['description']%>
  </textarea>
  <label for="url">URL:</label>
  <input type="URL" name="url" id="url" value="<%= @video['url'] %>">
  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="<%= @video['genre'] %>">
  <button type="submit">Edit video</button>
</form>
</div>