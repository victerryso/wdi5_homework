<%= form_for @author do |f| %>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>
  </p>
  <p>
  <%= f.label :dob, "Date of Birth" %>
  <%= f.text_field :dob, :placeholder => 'YYYY/MM/DD' %>
  </p>
  <p>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
  </p>
  <p>
  <%= f.label :period %>
  <%= f.text_field :period %>
  </p>
  <p>
  <%= f.label :image %>
  <%= f.text_field :image %>
  </p>
  <%= f.submit %>
<% end %>