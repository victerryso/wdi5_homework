- if @user.errors.any?
  %h1 ERROR
  %ol
    - @user.errors.full_messages.each do |msg|
      %li= msg


%h2 New User
= form_for @user do |f|
  = f.label :username
  = f.text_field :username, :autofocus => true

  = f.label :avatar
  = f.url_field :avatar

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation
  = f.password_field :password_confirmation

  = f.submit
