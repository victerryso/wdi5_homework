<form action="/videos/<%= @video['id'] %>" method="post">
  <label for="title">Title: </label>
  <input type="text" id="title" name="title" value="<%= @video['title'] %>">

  <label for="description">Description: </label>
  <input type="text" id="Description" name="description" value="<%= @video['description'] %>">

  <label for="url">Video URL</label>
  <input type="url" id="url" name="url" value="<%= @video['url'] %>">

  <label for="genre">Genre: </label>
  <input type="text" id="genre" name="genre" value="<%= @video['genre'] %>">

  <button>Update a video!</button>
</form>