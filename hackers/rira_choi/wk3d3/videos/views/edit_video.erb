<form action="/videos" method="post">
  <div class="second">
    <label for="category">Category: </label>
      <select name="category_id" id="category">
          <% Category.all.each do |category| %>
        <option value="<%= category.id %>"<%= "selected" if category.id == @video.category_id %>><%= category.name %></option>
          <% end %>
      </select>

  <div class="second">
    <label for="genre">Genre: </label>
      <select for="genre" name="genre">
         <optgroup label="Asking">
          <% %w(Reviews Receipes Others).each do |genre| %>
            <option <%= "selected" if genre == @video.genre %>><%= genre %></option>
          <% end %>
         </optgroup>

        <optgroup label="Laughing">
          <% %w(Funny Interesting Others).each do |genre| %>
            <option <%= "selected" if genre == @video.genre %>><%= genre %></option>
          <% end %>
        </optgroup>

        <optgroup label="Listening">
          <% %w(Top10 Pop Rock Classic Others).each do |genre| %>
           <option <%= "selected" if genre == @video.genre %>><%= genre %></option>
          <% end %>
        </optgroup>

        <optgroup label="Studying">
          <% %w(Language Computer Others).each do |genre| %>
            <option <%= "selected" if genre == @video.genre %>><%= genre %></option>
          <% end %>
        </optgroup>

        <optgroup label="Watching">
          <% %w(Trailer Movies TVshow Others).each do |genre| %>
            <option <%= "selected" if genre == @video.genre %>><%= genre %></option>
          <% end %>
        </optgroup>
      </select>
    </div>

    <div class="third">
      <label for="title">Title: </label>
      <input type="text" id="title" name="title" value="<%= @video.title %>">

      <label for="url">Video URL: </label>
      <input type="url" id="url" name="url" value="<%= @video.url %>"><br/>
    </div>

    <div class="last">
      <label for="description">Description:<br/>
        <textarea id="description" name="description" rows= "5" placeholder="Tell everyone about the video here!"><%= @video.description %>  </textarea>
      </label>
    </div>
  <button>Update the video!</button>
</form>