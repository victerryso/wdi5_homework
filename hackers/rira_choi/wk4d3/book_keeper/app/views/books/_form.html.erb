<%= form_for @book do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title, :autofocus => true %>
  </p>

  <p>
    <%= f.label :year %><br/>
    <%= f.text_field :year %>
  </p>

   <p>
    <%= f.label :genre %><br/>
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :image %><br/>
    <%= f.text_field :image %>
  </p>

   <p>
    <%= f.label :description %><br/>
    <%= f.text_area(:description, size: '24x6') %>
  </p>

  <p>
    <%= f.label :author_id %>
    <%= f.select :author_id, Author.all.map {|author| [author.name, author.id] }, :include_blank => true %>
  </p>

  <%= f.submit('Create a New Book') %>
<% end %>