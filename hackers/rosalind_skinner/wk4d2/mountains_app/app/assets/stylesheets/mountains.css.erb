@import url(http://fonts.googleapis.com/css?family=Amatic+SC:400,700);
@import url(http://fonts.googleapis.com/css?family=Roboto:400,100);
@import url(http://fonts.googleapis.com/css?family=Roboto+Slab:400,100);

body {
  font-family: 'Roboto', sans-serif;
  font-weight:300;
  color: #FFF;
  margin:0;
  background-image:url(http://payload267.cargocollective.com/1/14/450171/7641443/20130318-DSC_4388-2_o.jpg);
  background-size:cover;
  background-attachment:fixed;
  text-shadow: 1px 0 0 rgba(0,0,0,.5);

}

.container {
  max-width:700px;
  height:100%;
  text-align: center;
  position: relative;
  margin:0 auto;

}

.content {
  margin:100px auto;
}

article {
  padding-top:100px;
}

nav {
  margin:0 auto;
  text-align:left;
  position:fixed;
}

header {
  background:#FFF;
  border-bottom:1px solid #ccc;
}


a {
  text-decoration: none;
  color:inherit;
}

a:hover {
  color:#ccc;
}


.results p {
  line-height: 1em;
}

/*Search Input*/
form {
  margin:0 auto;
  text-align:center;
  display: block;
}

input[value="Destroy"]{
  border:4px solid #FFF;
  background-color: rgba(0,0,0,0);
  font-family:inherit;
  font-weight: 100;
  color: #FFF;
  font-size: 1em;
  padding:10px;
  border-radius: 5px;
  margin:20px;
  cursor: pointer;
  text-shadow: 1px 0 0 rgba(0,0,0,.5);
}

label {
  display:inline-block;
  margin:40px;
}

select {
  background-color: #FFF;
  border:1px solid #ccc;
}

footer {
  width:500px;
  bottom: 0;
  margin:auto;
  text-align: center;
}

input {
  padding:14px;
  border:none;
}

button {
  background-color: #F0EBD2;
  border:none;
  font-family: inherit;
  font-weight: inherit;
  color:#3B7C8F;
  font-size: 1.0em;
  width:130px;
  margin:20px;
  cursor: pointer;
  padding:10px;
}

.home {
  width:200px;
  height: 200px;
  margin: 100px auto;
  border:4px solid #FFF;
  border-radius:100%;
  text-align:center;
  padding:10px;
  padding-top:20px;
  box-sizing:border-box;
  font-family: 'Roboto Slab', serif;
  font-weight:400;
  font-size:1.8em;
}

a{
  font-family: 'Roboto Slab', serif;
  font-weight:400;
}