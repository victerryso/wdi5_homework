<%= form_for @author do|f| %>
<p>
    <%= f.label :name  %>
    <%= f.text_field :name, :autofocus => true  %>
  </p>

   <p>
    <%= f.label :nationality  %>
    <%= f.text_field :nationality %>
  </p>

   <p>
    <%= f.label :dob, "Date of birth"  %>
    <%= f.text_field :dob, :placeholder => "DD/MM/YYYY" %>
  </p>

   <p>
    <%= f.label :image  %>
    <%= f.text_field :image  %>
  </p>



  <%= f.submit  %>
<% end %>